<%= form_for [@topic, @comment] do |form| %>
		<% if @comment.errors.any? %>
			<div class="row panel collout radius">
				<p>Aşağıdaki hataları düzeltip tekrar deneyiniz</p>
				<ul class="square">
					<% @comment.errors.full_messages.each do |message| %>
						<li><%= message %></li>
					<% end %>
				</ul>
			</div>
		<% end %>
		<%= form.text_area :body, class:'comment-area' %>
		<%= form.submit class:'tiny button radius' %>
<% end %>